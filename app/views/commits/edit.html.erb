<div class="container">
  <h1 class="form-title">コミットを編集</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3 form-wrapper">
      <%= form_with model: [@task, @commit], local: true do |f| %>
        <%= render partial: '/shared/error_messages', locals: { model: @commit } %>
        <div class = 'form-group'>
          <%= f.label :content, "タスク名" %>
          <%= f.text_area :content, autofocus: true, class: "form-control", placeholder: "コミットを入力してください", style: "height: 100px;" %>
        </div>
        <button class="btn btn-primary form-submit-btn">
          更新
        </button>
        <%= link_to "タスクへ戻る", task_path(@task), class: "link-below-user-form" %>
      <% end %>
    </div>
  </div>
</div>
