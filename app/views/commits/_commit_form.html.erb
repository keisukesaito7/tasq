<%= form_with model: [task, commit], local: true do |f| %>
  <%= render partial: '/shared/error_messages', locals: { model: commit } %>
  <div class="field">
    <%= f.label :content %>
    <%= f.text_field :content, autofocus: true %>
  </div>

  <button class="btn btn-primary">
    <%= "#{submit_text}" %>
  </button>
<% end %>